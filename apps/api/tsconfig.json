{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM"],
    "types": ["@types/node"],
    "outDir": "dist",
    "baseUrl": "src",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
